autoload -U select-word-style compinit

for file in ~/.zsh/{misc/{path,env,history,prompt,key-bindings,email,rbenv,brew,cargo,ssh},z/z.sh}; do
	[[ -r "$file" ]] && . "$file"
done

for file in ~/.zsh/completion/*; do
    [[ -r "$file" ]] && . "$file"
done

machine_file=~/.zsh/machine/$(hostname -s)
[[ -r "$machine_file" ]] && . "$machine_file"

compinit
