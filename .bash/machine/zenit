if [[ "$TERM" != "screen" && "$TMUX" == "" ]]; then
    TMUX_SESSION=devel
    if tmux has-session -t $TMUX_SESSION 2>/dev/null; then
        tmux attach-session -t $TMUX_SESSION
    else
        tmux new-session -s $TMUX_SESSION
    fi
fi

export MAKEFLAGS="--jobs $(( $(nproc) + 1))"

# Android SDK and NDK, installed via umake.
export NDK_ROOT=/home/mrowe/.local/share/umake/android/android-ndk
export ANDROID_HOME=/home/mrowe/.local/share/umake/android/android-sdk
export PATH=$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$PATH
