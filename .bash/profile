for file in ~/.bash/{path,env,history,prompt,z/z.sh}; do
    [[ -r "$file" ]] && . "$file"
done

for file in ~/.bash/completion/*; do
    [[ -r "$file" ]] && . "$file"
done

# Disable flow control.
stty -ixon

# Default to work email address since most machines are work machines.
export EMAIL=mrowe@apple.com

machine_file=~/.bash/machine/$(hostname -s)
[[ -r "$machine_file" ]] && . "$machine_file"
